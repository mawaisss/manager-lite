<h2>Quotations</h2>
<a href="/quotations/new">Add New Quotation</a>
<table>
  <thead>
    <tr>
      <th>Quotation No</th>
      <th>Client</th>
      <th>Project</th>
      <th>Date</th>
      <th>Total</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% quotations.forEach(q => { %>
      <tr>
        <td><%= q.number %></td>
        <td><%= q.client %></td>
        <td><%= q.project %></td>
        <td><%= q.date %></td>
        <td><%= q.total %></td>
        <td><a href="/quotations/edit/<%= q.id %>">Edit</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>
