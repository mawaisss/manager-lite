<h2>Edit Employee</h2>
<form method="POST" action="/employees/edit/<%= employee.id %>">
  <label>Name:</label><input type="text" name="name" value="<%= employee.name %>" required/><br/>
  <label>Role:</label><input type="text" name="role" value="<%= employee.role %>" required/><br/>
  <label>Balance:</label><input type="number" name="balance" value="<%= employee.balance %>" required/><br/>
  <label>Status:</label>
  <select name="status">
    <option value="Active" <%= employee.status === 'Active' ? 'selected' : '' %>>Active</option>
    <option value="Sick" <%= employee.status === 'Sick' ? 'selected' : '' %>>Sick</option>
    <option value="Vacation" <%= employee.status === 'Vacation' ? 'selected' : '' %>>Vacation</option>
  </select><br/>
  <button type="submit">Update Employee</button>
</form>
