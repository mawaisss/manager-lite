<h2>Add New Client</h2>
<form method="POST" action="/clients/new">
  <label>Name:</label><input type="text" name="name" required/><br/>
  <label>Company No:</label><input type="text" name="company_no" required/><br/>
  <label>Email:</label><input type="email" name="email" required/><br/>
  <label>Phone:</label><input type="text" name="phone" required/><br/>
  <label>Mobile:</label><input type="text" name="mobile" required/><br/>
  <label>TRN:</label><input type="text" name="trn" required/><br/>
  <label>Address:</label><textarea name="address" required></textarea><br/>
  <button type="submit">Add Client</button>
</form>
